<br/><br/>
<h1> Login Page </h1>
<br/>

<%= form_with url: login_path, data: { turbo: false } do |form| %>

    <div class="mb-3">
        <%=form.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="mb-3">
        <%=form.text_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="mb-3">
        <%=form.submit "Log In", class: "btn btn-primary"%>
    </div>

<% end %>