<br/><br/>
<h1>SignUp Page</h1>
<br/>

<%= form_with model: @user, url: signup_path, data: { turbo: false } do |form| %>

    <%if form.object.errors.any? %>

        <div class="alert alert-danger" role="alert">
            <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
            <% end %>
        </div>

    <% end %>

    <div class="mb-3">
        <%=form.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="mb-3">
        <%=form.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="mb-3">
        <%=form.text_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="mb-3">
        <%=form.text_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
    </div>

    <div class="mb-3">
        <%=form.submit "Sign Up", class: "btn btn-primary"%>
    </div>

<% end %>